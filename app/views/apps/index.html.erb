<h1>Listing apps</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Password</th>
    <th>Admin</th>
    <th>Description</th>
  </tr>

<% for app in @apps %>
  <tr>
    <td><%=h app.name %></td>
    <td><%=h app.password %></td>
    <td><%=h app.admin %></td>
    <td><%=h app.description %></td>
    <td><%= link_to 'Show', app %></td>
    <td><%= link_to 'Edit', edit_app_path(app) %></td>
    <td><%= link_to 'Destroy', app, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New app', new_app_path %>
