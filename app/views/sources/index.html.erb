<h1>Listing sources</h1>

<table>
  <tr>
    <th>Server</th>
    <th>URL</th>
  </tr>

<% for source in @sources %>
  <tr>
    <td><%=link_to source.server,edit_source_path(source) %></td>
    <td><%=source.url%></td>
    <td><%= link_to 'X', source, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New source', new_source_path %>
