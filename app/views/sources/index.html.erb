<h1>Listing sources</h1>

<table>
  <tr>
    <th>Name</th>
    <th>URL</th>
  </tr>

<% for source in @sources %>
  <tr>
    <td><%=link_to source.name,edit_app_source_path(:id=>source.id,:app_id=>@app.id) %></td>
    <td><%=source.url%></td>
    <td><%= link_to 'X', :action=>"destroy", :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

